{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "options": {
                    "env": {
                        "VBCC": "bin\\windows_x64",
                        "PATH": "bin\\windows_x64"
                    }
                },
                "command": "bin\\windows_x64\\make -f Makefile.win"
            },
            "osx": {
                "options": {
                    "env": {
                        "VBCC": "bin/osx"
                    }
                },
                "command": "export PATH=$VBCC:$PATH; make"
            },
            "linux": {
                "options": {
                    "env": {
                        "VBCC": "bin/debian9_x64"
                    }
                },
                "command": "export PATH=$VBCC:$PATH; make"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "windows": {
                "options": {
                    "env": {
                        "VBCC": "bin\\windows_x64",
                        "PATH": "bin\\windows_x64"
                    }
                },
                "command": "bin\\windows_x64\\make -f Makefile.win clean"
            },
            "osx": {
                "options": {
                    "env": {
                        "VBCC": "bin/osx"
                    }
                },
                "command": "export PATH=$VBCC:$PATH; make clean"
            },
            "linux": {
                "options": {
                    "env": {
                        "VBCC": "bin/debian9_x64"
                    }
                },
                "command": "export PATH=$VBCC:$PATH; make clean"
            }
        }
    ]
}