    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "env": {
                    "VBCC": "bin/osx"
                }
            },
            "command": "export PATH=$VBCC:$PATH; make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "options": {
                "env": {
                    "VBCC": "bin/osx"
                }
            },
            "command": "export PATH=$VBCC:$PATH; make clean",
        }
    ]
}